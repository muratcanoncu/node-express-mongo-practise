<div class="login">
  <h1>Please Log In</h1>

  <form action="/login" method="POST">
    <div
      class="d-flex justify-content-center flex-column align-items-center w-100"
    >
      <label class="text-center">E-mail</label>
      <input type="email" name="email" />
    </div>
    <div
      class="d-flex justify-content-center flex-column align-items-center w-100"
    >
      <label class="text-center">Password</label>
      <input type="password" name="password" />
    </div>
    <div class="d-flex justify-content-between align-items-center w-100 px-4">
      <button
        type="submit"
        class="mt-3 mb-1 w-50 text-center btn btn-dark font-weight-bolder d-inline"
      >Log In</button>
      <button
        class="mt-3 mb-1 w-25 text-center btn btn-warning font-weight-bolder d-inline"
      ><a href="/login/register" class="toRegister">Sign Up!</a></button>
    </div>

  </form>
</div>