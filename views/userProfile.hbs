<div class="userProfile">
  {{#if query.messageAdded}}
    <div class="alert alert-success text-center" role="alert">
      {{query.addMessage}}
    </div>
  {{/if}}
  {{#if query.messageDeleted}}
    <div class="alert alert-danger text-center" role="alert">
      {{query.deleteMessage}}
    </div>
  {{/if}}
  <h1 class="text-center m-4">User Profile</h1>
  <div
    class="d-flex justify-content-between w-50 px-4 mx-auto border-bottom border-dark pb-4 align-items-center"
  >
    <img
      src="/img/uploads/{{userDataBase.profilePic}}"
      class="userProfilePicture"
    />
    <div>
      <h2 class="font-weight-bold w-100">Username: {{userDataBase.name}}</h2>
      <button class="btn btn-danger"><a href="/login">Sign Out!</a></button>
      <form
        action="/login/userprofile"
        method="POST"
        enctype="multipart/form-data"
        class="d-flex flex-column align-items-start"
      >
        <label class="pl-4"><h5>Upload a new photo</h5></label>
        <input type="file" name="userPosts" multiple />
        <button class="w-50 mt-1 btn btn-secondary">Upload</button>
      </form>
    </div>

  </div>
  <div
    class="Posts w-75 mx-auto d-flex justify-content-start flex-wrap align-items-center"
  >
    {{#if userDataBase.gallery}}
      {{#each userDataBase.gallery}}
        <div class="postBox">
          <img src="/img/uploads/{{this.filename}}" />
          <div class="d-flex">
            <button class="btn btn-danger w-100"><a
                href="/login/userprofile/delete/{{this._id}}"
              >Delete</a></button>
          </div>
        </div>
      {{/each}}
    {{/if}}
  </div>
</div>