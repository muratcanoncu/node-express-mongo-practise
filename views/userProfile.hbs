<div class="userProfile">
  {{#if query.messageAdded}}
    <div class="alert alert-success text-center" role="alert">
      {{query.addMessage}}
    </div>
  {{/if}}
  {{#if query.messageDeleted}}
    <div class="alert alert-danger text-center" role="alert">
      {{query.deleteMessage}}
    </div>
  {{/if}}
  <h1 class="text-center m-4">User Profile</h1>
  <div
    class="d-flex justify-content-between mx-auto pb-4 align-items-center profileHeader"
  >
    <img
      src="/img/uploads/{{userDataBase.profilePic}}"
      class="userProfilePicture"
    />
    <div class="d-flex flex-column align-items-end">
      <h2 class="font-weight-bold mb-4 w-100">Username:<br
        />{{userDataBase.name}}</h2>
      <a class="signOutButton" href="/login/logout">Sign Out!</a>
      <form
        action="/login/userprofile"
        method="POST"
        enctype="multipart/form-data"
        class="d-flex flex-column align-items-start uploadForm"
      >
        <label class="pl-4"><h5 class="mb-0">Upload a new photo</h5></label>
        <input type="file" name="userPosts" multiple />
        <button class="w-100 mt-1 btn btn-secondary">Upload</button>
      </form>
    </div>

  </div>
  <div
    class="Posts w-75 mx-auto d-flex justify-content-start flex-wrap align-items-center postContainer"
  >
    {{#if userDataBase.gallery}}
      {{#each userDataBase.gallery}}
        <div class="postBox">
          <img src="/img/uploads/{{this.filename}}" />
          <div class="d-flex">
            <a
              class="signOutButton w-100 h5 bg-secondary"
              href="/login/userprofile/delete/{{this._id}}"
            >Delete</a>
          </div>
        </div>
      {{/each}}
    {{/if}}
  </div>
</div>