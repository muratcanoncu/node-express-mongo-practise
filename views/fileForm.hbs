<h1>File upload test</h1>

<form action="/uploadform" method="POST" enctype="multipart/form-data">
  <div class="col-md-6">
    <label for="inputEmail4" class="form-label">Upload a Picture</label>
    <input
      type="file"
      class="form-control"
      id="inputEmail4"
      name="profilePic"
      multiple
    />
  </div>
  <div class="col-sm-12 mt-2 mb-4">
    <button
      style="width: 190px;"
      type="submit"
      class="btn btn-primary"
    >Upload</button>
  </div>
</form>

{{#if pictureArray}}
  <div
    class="d-flex justify-content-between align-items-center flex-wrap w-100 px-5"
  >
    {{#each pictureArray}}
      <div
        class="card border border-primary m-2"
        style="width: 18rem;height:350px"
      >
        <img
          class="card-img-top h-75 w-100"
          src="/uploadedImage/{{filename}}"
          alt="Card image cap"
        />
        <div class="card-body">
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}