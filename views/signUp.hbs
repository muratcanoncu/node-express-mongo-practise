<div class="signUp">
  <h1>This is signup</h1>

  <form action="/login/register" method="POST">

    <div
      class="d-flex justify-content-center flex-column align-items-center w-100"
    >
      <label class="text-center">Name</label>
      <input type="text" name="name" required />
    </div>
    <div
      class="d-flex justify-content-center flex-column align-items-center w-100"
    >
      <label class="text-center">Age</label>
      <input type="number" name="age" required />
    </div>
    <div
      class="d-flex justify-content-center flex-column align-items-center w-100"
    >
      <label class="text-center">E-mail</label>
      <input type="email" name="email" required />
    </div>
    <div
      class="d-flex justify-content-center flex-column align-items-center w-100"
    >
      <label class="text-center">Password</label>
      <input type="password" name="password" required />
    </div>
    <div
      class="d-flex justify-content-center flex-column align-items-center w-100"
    >
      <label class="text-center">Role</label>
      <select name="role" required>
        <option value="admin" selected>Admin</option>
        <option value="customer">Customer</option>
      </select>
    </div>
    <div
      class="d-flex justify-content-center flex-column align-items-center w-100"
    >
      <label class="text-center">Profile Picture</label>
      <input type="file" name="profilePic" />
    </div>
    <div class="d-flex justify-content-center align-items-center w-100 px-4">
      <button
        type="submit"
        class="mt-3 mb-1 w-75 text-center btn btn-dark font-weight-bolder d-inline"
      >Sign Up</button>

    </div>

  </form>

</div>